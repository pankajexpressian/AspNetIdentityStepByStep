@model AspNetIdentityStepByStep.Models.ViewModels.SignupViewModel
@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Signup</h1>

<div class="row">
    <div class="col-4 offset-4">
        <form asp-controller="Identity" asp-action="Signup" method="post">
            @Html.ValidationSummary()

            <div class="form-group">
                <label asp-for="Name" class=""></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class=""></label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class=""></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class=""></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
            <input type="submit" class="btn btn-primary" value="Submit" />
        </form>
        <br />  
        <div>
            If you already have an account, please login <a asp-controller="Identity" asp-action="Signin">here</a>
        </div>
    </div>
</div>
